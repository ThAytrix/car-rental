			{% endfor %} #}
		<div class="row row-cols-2 row-cols-lg-3 g-2 g-lg-3 mt-3">
			{% for animal in animals %}

				<div class="col">
					<div class="card" style="width: 18rem">
						<img class="card-img-top" src={{ asset('img/cars/' ~ animal.path) }} alt="{{ animal.name }}">
						<div class="card-body">
							<h5 class="card-title">
								{{ animal.name }}</h5>
							<p class="card-text">Année :
								{{ animal.age }}
							</p>
							<p class="card-text">Prix :
								{{ animal.price }}€ / jour
							</p>
							<a href="{{ path('car_show', {'id': animal.id}) }}" class="btn btn-primary">
								Plus de détails
							</a>
							{% if animal.adopt is not empty %}
								<span class="badge bg-success">Loué</span>
							{% endif %}
							{# <a href="{{path('show_product', {'id':  product.id} ) }}" class="btn btn-primary">Description</a>     #}
						</div>
					</div>
				</div>

			{% endfor %}
		</div>
	</div>

{% endblock %}
